input
	border 0
	background none

.wrap
	display flex
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	flex-direction column
	background url(../images/login-bg.png) top center no-repeat
	background-size 100%

.logo
	width 1.6rem
	padding-top 2.2rem

.form
	padding 0 .5rem

	&-item
		color rgba(0,0,0,.5)
		font-size 14px
		border-bottom 1px solid rgba(0,0,0,.05)

	&-input
		display block
		padding .3rem 0
		width 100%
		text-align center

	&-btn
		width 100%
		margin-top 1.5rem
		line-height 1.1rem
		text-align center
		color #fff
		background #39ccd7
		-webkit-appearance none

		&:active
			background #238e96
			
.forget
	margin .4rem 0
	padding-left .5rem

	&-link
		font-size 12px
		color #616161
		text-decoration underline
