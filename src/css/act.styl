@import '../mixin/index'

body
	background #f5f5f5
	padding-bottom 50px

// 搜索
.search
	padding .15rem .25rem
	background #f0eff5

	&-wrap
		background #fff
		border 1px solid #ecebf1
		align-items center
		border-radius 4px

	&-input
		flex 1
		padding 10px 15px
		border none
		color #888
		font-size 14px

	&-icon
		width 18px
		margin 0 15px

.actList-item
	position relative
	padding .3rem .25rem
	margin-bottom .2rem
	background #fff

	&-title
		color #000
		padding-right 1.25rem
		margin-bottom 5px
		font-size 14px

	&-intro
		textOverflow(2)
		margin-bottom 8px
		font-size 12px
		line-height 1.8
		color #666

	&-date
		color rgba(0,0,0,.5)
		font-size 12px

	&-status
		position absolute
		right .25rem
		top .3rem
		width 1.15rem
		height .35rem
		border-radius 3px
		color #fff
		line-height .35rem
		text-align center
		font-size 12px

.status-1
	background #ef76aa
.status-2
	background #7d7d7d
.status-3
	background #c2c2c2
.status-4
	background #7ec268

.create
	fixed()
	btn(50px)

	bottom 0
	background #39ccd7
	&:hover
		color #fff

// 创建及详情
.green
	color #47bfd1
.wrap
	padding .25rem
.box
	display block
	width 100%
	padding 10px
	margin-bottom 20px
	background #fff
	border 1px solid #e7e7e7
	border-radius 3px
	font-size 14px
.prize
	display flex
	padding .2rem .2rem 0 .2rem
	flex-wrap wrap
	text-align center
	font-size 12px
	&-item
		min-width 1.4rem
		margin-right .4rem
		margin-bottom .2rem
	&-item-img
		width .8rem
		height .8rem
.textarea
	height 120px
.submit
	btn(40px)
	border none
	background #39ccd7


// 选择奖励
.selectPrize
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background #fff

.selectPrize-msg
	padding .2rem .25rem
	font-size 12px
	background #f5f5f5

.selectPrize-list-item
	display flex
	padding .3rem .25rem
	align-items center
	border-bottom 1px solid #f5f5f5

	&-thumb
		width .8rem
		height .8rem
		margin-right .25rem

	&-name
		flex 1

.selectPrize-count
	display flex
	font-size 14px

	&-reduce
	&-add
		width .4rem
		height .4rem
		border-radius 50%
		text-align center

	&-reduce
		color #38cad8
		border 1px solid #38cad8

	&-add
		background #38cad8
		color #fff

	&-val
		margin 0 10px

.selectPrize-btn-wrap
	padding 0 .4rem
	margin-top .5rem

.selectPrize-btn
	btn(1rem)
	background #38cad8