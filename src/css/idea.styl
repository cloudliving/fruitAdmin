@import '../mixin/index'

body
	background #f5f5f5

// 列表页
.ideas
	padding-top .2rem
.ideas-item
	padding .4rem .25rem
	background #fff
	border-bottom 1px solid #ededed
	&-icon
		width .13rem

.create
	fixed()
	btn(.86rem)

	bottom 0
	left 0
	background #39ccd7
	border-radius 0

.wrap
	padding .25rem
.box
	display block
	width 100%
	padding 10px
	margin-bottom 20px
	background #fff
	border 1px solid #e7e7e7
	border-radius 3px
	font-size 14px
.submit
	btn(40px)
	border none
	background #39ccd7
.textarea
	height 250px