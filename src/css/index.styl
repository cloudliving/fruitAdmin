@import '../mixin/index'

body
	padding-bottom 50px

.header
	display flex
	height 4.7rem
	color #fff
	text-align center
	align-items center
	justify-content center
	background #0072BB url(../images/line.png) center no-repeat
	background-size 100%
	
	&-avatar
		width 2.3rem
		height 2.3rem
		padding .3rem
		background-image url(../images/avatar-bg.png)
		background-size 100% 100%
		
	&-name
		font-size 18px
		margin .1rem 0 .05rem 0

	&-identify
		font-size 12px

.links
	display flex
	margin .4rem 0 1rem
	font-size 14px

	&-item
		flex 1
		text-align center

	&-item-icon
		width .5rem

.attr
	display flex
	align-items center
	text-align center

	&-gather
		display flex
		align-items center
		justify-content center
	
	&-gather-percent
		font-size 36px
		color #000

	&-ranking
	&-time
		flex 1

	&-ranking-val
	&-time-val
		margin-top 5px
		color #000
		font-size 18px

// 圆环技术模块
.m-loop
	position relative
	width 3.7rem
	height 3.7rem
	background url(../images/q1.png) no-repeat
	background-size 100% 100%

	&-wrap
		position absolute
		top 0
		width 50%
		height 100%
		overflow hidden

		&-left
			left 0
		&-right
			right 0

	&-ctn
		position absolute
		width 200%
		height 100%
		background url(../images/q2.png) no-repeat
		background-size 100% 100%

		&-left
			clip rect(0, 3.7rem, 3.7rem, 1.85rem)
		&-right
			right 0
			clip rect(0, 1.85rem, 3.7rem, 0)


// tags
.tags-wrap
	margin-top 1rem
	text-align center

.tags-title
	position relative
	font-size 14px

.tags-btn
	position absolute
	left 70px
	top 2px
	text-align left
	width 100px
	font-size 12px
	
	img
		position relative
		top -1px
		width 15px
		margin-right 3px
		vertical-align middle

.tags
	tags()
	
// 底部导航
.ft
	display flex
	position fixed
	bottom 0
	left 0
	width 100%
	height 50px
	background #39ccd7
	color #fff
	text-align center
	line-height 50px
	
	&-item
		flex 1

	&-item:first-child
		border-right 1px solid #38c3d0