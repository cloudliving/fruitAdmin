@import '../mixin/index'

.header
	display flex
	height 4.7rem
	color #fff
	text-align center
	align-items center
	justify-content center
	background #2ABEE2 
	
	&-avatar
		width 1.5rem
		height 1.5rem
		border 2px solid #fff
		border-radius 50%
		
	&-name
		font-size 16px
		margin .1rem 0 .05rem 0

	&-identify
		font-size 12px

// 用户属性
.user-attr
	line-height .8rem
	font-size 14px

	&-item
		display flex

	&-key
		width 1.65rem
		background #f5f5f5
		text-align center

	&-val
		flex 1
		padding-left .65rem
		border-bottom 1px solid #ededed

// tags
.tags
	tags()

	li
		padding .15rem .45rem
		font-size 14px
		
.addTags
	margin-left .25rem
	padding .15rem .5rem
	font-size 14px
	color #2abee3
	border 1px dashed #2abee3
	border-radius 2em

.operate
	display flex
	margin-top .8rem
	padding 0 .25rem
	color #fff

	&-item
		flex 1
		
		&:first-child
			padding-right .15rem
		&:last-child
			padding-left .15rem

	&-link
		display flex
		width 100%
		height .86rem
		line-height .86rem
		background #39ccd7
		justify-content center
		align-items center
		border-radius 4px

	&-icon
		width .4rem
		margin-right 5px