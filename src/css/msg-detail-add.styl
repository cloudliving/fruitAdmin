body
	background #f5f5f5
	font-size 14px
input
select
textarea
	-webkit-appearance none
	&[disabled]
		opacity 1 // remove ios default style
		-webkit-text-fill-color #333
		color #333

.orange
	color #ea7a55	
.wrap
	padding .25rem
.box
	display block
	width 100%
	padding 10px
	margin-bottom 20px
	background #fff
	border 1px solid #e7e7e7
	border-radius 3px
.text
	height 250px
	line-height 1.8
.relative
	position relative
.trigon
	position absolute
	right 10px
	bottom 14px

	&-down
		width 13px
		
	&-right
		width 8px


.submitWrap
	padding 0 15px

.submit
	display block
	width 100%
	height 50px
	line-height 50px
	border 0
	background #39ccd7
	color #fff