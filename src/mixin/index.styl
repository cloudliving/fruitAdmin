tags()
	padding .25rem .25rem 0 .25rem
	text-align left

	li
		display inline-block
		padding .2rem .3rem
		border-radius 2em
		color #fff
		margin 0 .3rem .3rem 0

users()
	.users-item
		padding .3rem .25rem
		font-size 14px
		border-bottom 1px solid #f5f5f5
		
		&-avatar
			width .8rem
			height .8rem
			margin-right .4rem

		&-info
			flex 2

		&-identify
			flex 3

textOverflow(num)
	overflow hidden
	text-overflow ellipsis
	display -webkit-box
	-webkit-box-orient vertical
	-webkit-line-clamp num

fixed()
	position fixed
	width 100%

btn(height)
	display block
	width 100%
	height height
	line-height height
	text-align center
	border-radius 4px
	color #fff